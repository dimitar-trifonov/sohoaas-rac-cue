server {
    listen ${NGINX_PORT};
    server_name localhost;

    # Proxy Authentication routes to Backend (not MCP)
    location /api/auth/ {
        proxy_pass ${BACKEND_SERVICE_URL}/api/auth/;
        proxy_http_version 1.1;
        # Use upstream host for proper SNI/Host routing on Cloud Run
        proxy_set_header Host $proxy_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Authorization $http_authorization;
        proxy_ssl_server_name on;
        
        # CORS headers for auth flow
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "Authorization, Content-Type";
    }

    # Proxy SOHOAAS backend API calls
    location /api/v1/ {
        proxy_pass ${BACKEND_SERVICE_URL}/api/v1/;
        proxy_http_version 1.1;
        # Use upstream host for proper SNI/Host routing on Cloud Run
        proxy_set_header Host $proxy_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Authorization $http_authorization;
        proxy_ssl_server_name on;
        
        # CORS headers
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
        add_header Access-Control-Allow-Headers "Authorization, Content-Type";
    }



    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # Serve SOHOAAS frontend static files (MUST be last - catches all remaining requests)
    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
}
