# SOHOAAS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# MCP SERVICE CONFIGURATION
# =============================================================================
# Google OAuth2 Configuration for MCP Service
MCP_GOOGLE_CLIENT_ID=your_google_client_id_here
MCP_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
MCP_OAUTH_REDIRECT_URL=http://localhost:3000/api/auth/callback

# MCP Service Settings
MCP_PORT=8080
MCP_NODE_ENV=production
MCP_LOG_LEVEL=info
MCP_SERVICE_NAME=google-workspace

# =============================================================================
# SOHOAAS BACKEND CONFIGURATION
# =============================================================================
# SOHOAAS Backend Settings
SOHOAAS_PORT=8081
SOHOAAS_GIN_MODE=release
SOHOAAS_LOG_LEVEL=info
SOHOAAS_ENVIRONMENT=production

# AI/LLM Configuration
SOHOAAS_OPENAI_API_KEY=your_openai_api_key_here
SOHOAAS_GOOGLE_API_KEY=your_google_api_key_here
SOHOAAS_GENKIT_ENV=production
SOHOAAS_GENKIT_REFLECTION_PORT=3101

# Service Communication
SOHOAAS_MCP_SERVICE_URL=http://mcp-service:8080
SOHOAAS_MCP_AUTH_ENDPOINT=/api/auth/token

# =============================================================================
# SOHOAAS FRONTEND CONFIGURATION
# =============================================================================
# Frontend Nginx Settings
SOHOAAS_NGINX_PORT=3000
SOHOAAS_MCP_SERVICE_URL=http://mcp-service:8080
SOHOAAS_BACKEND_SERVICE_URL=http://sohoaas-backend:8081
